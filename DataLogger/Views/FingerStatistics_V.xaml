<Page x:Class="DataLogger.Views.FingerStatistics_V"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataLogger.Views" 
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1200"
      Title="FingerStatistics_V">
    <StackPanel Orientation="Horizontal">
        <local:Navigation_Control/>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <!--<Image Source="/Views/Resources/Left_Hand_Outline.png" Stretch="Uniform" MaxWidth="600"/>-->
                    <StackPanel Orientation="Horizontal" Height="100" Width="200">
                        <lvc:PieChart Series="{Binding LeftHalfCrimp_Series}" Height="100"/>
                        <lvc:PieChart Series="{Binding LeftOpenCrimp_Series}" Height="100"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel>
                    <!--<Image Source="/Views/Resources/Left_Hand_Outline.png" Stretch="Uniform" RenderTransformOrigin="0.5,0.5" MaxWidth="600" >
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="-1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>-->
                    <StackPanel Orientation="Horizontal" Height="100" Width="200">
                        <lvc:PieChart Series="{Binding RightHalfCrimp_Series}" Height="100"/>
                        <lvc:PieChart Series="{Binding RightOpenCrimp_Series}" Height="100"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>
