<Page x:Class="DataLogger.Views.FingerStatistics_V"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataLogger.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FingerStatistics_V">

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button>
                <Hyperlink NavigateUri="BasicStatistics_V.xaml">
                    Basic Statistics
                </Hyperlink>
            </Button>
            <Button>
                <Hyperlink NavigateUri="FingerStatistics_V.xaml">
                    Finger Statistics
                </Hyperlink>
            </Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image Source="/Views/Resources/Left_Hand_Outline.png" Stretch="Uniform" MaxWidth="400"/>
            <Image Source="/Views/Resources/Left_Hand_Outline.png" Stretch="Uniform" RenderTransformOrigin="0.5,0.5" MaxWidth="400" >
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </StackPanel>
    </StackPanel>
</Page>
